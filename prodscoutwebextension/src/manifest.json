{
  "name": "prodScout",
  "version": "1.0",
  "description": "Parental Control for Web Browsers",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "identity",
    "webNavigation",
    "alarms",
    "desktopCapture",
    "notifications",
    "browser_action"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html#/watcher",
    "default_icons": {
      "16": "assets/ps16.png",
      "32": "assets/ps32.png",
      "48": "assets/ps48.png",
      "128": "assets/ps128.png"
    }
  },
  "icons": {
    "16": "assets/ps16.png",
    "32": "assets/ps32.png",
    "48": "assets/ps48.png",
    "128": "assets/ps128.png"
  },
  "content_security_policy": {
    "content_security_policy": "script-src 'self' 'unsafe-inline'; https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com;  object-src 'self'"
  }
}
